<div class="content">
    <div class="container">
      <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="col-md-12">
          <div class="form h-100">
            <h3>Create your Subscription Page</h3>
            <form class="mb-5" method="post" id="contactForm" name="contactForm">
              <div class="row">
                <div class="col-md-6 form-group mb-3">
                  <label for="" class="col-form-label">Title (for you) *</label>
                  <input type="text" class="form-control" name="name" id="name" placeholder="Your name">
                </div>
                <div class="col-md-6 form-group mb-3">
                  <label for="" class="col-form-label">Header Text (people will see) *</label>
                  <input type="text" class="form-control" name="email" id="email"  placeholder="Your email">
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 form-group mb-3">
                  <label for="budget" class="col-form-label">Button To Follow Title *</label>
                  <div class="row">
                  <div class="form-group mb-3">
                  <select class="custom-select" id="budget" name="budget">
                    <option selected>Choose...</option>
                    <option value="Subscribe">Subscribe</option>
                    <option value="Follow">Follow</option>
                    <option value="Follow my IG">Follow my IG</option>
                    <option value="Get">Get</option>
                  </select>
                  </div>
                  </div>
                </div>
              </div>

              
              <div class="row">
                <div class="col-md-12 form-group mb-3">
                  <label for="" class="col-form-label">Choose avatar image *</label>
                  <input type="image" class="form-control" name="name" id="name" placeholder="Choose...">
                </div>
              </div>

              <div class="row">
                <div class="col-md-12 form-group mb-3">
                  <label for="message" class="col-form-label">Description *</label>
                  <textarea class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Write your message"></textarea>
                </div>
              </div>
              <div class="row" style="">
                <div class="col-md-12 form-group">
                  <input type="submit" value="Create SubPage" class="create-btn">
                  <span class="submitting"></span>
                </div>
              </div>
            </form>

            <div id="form-message-warning mt-4">
            </div> 
            <div id="form-message-success">
                Your message was sent, thank you!
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>
  
