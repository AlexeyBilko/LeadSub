@model LeadSub.Models.ViewModels.AccountSettingsViewModel
@{
    Layout = "~/Views/Shared/AuthenticatedLayout.cshtml";
}

<head>
    <link href="~/css/mainpage.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" /> 
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css//mysubpages.css" rel="stylesheet"/>
</head>

<div style="display:grid">
     <div class="d-flex ms-auto me-auto mt-5">
            <h3 class="d-block arial-bold-text mb-auto mt-auto">Hi, @Model.Name </h3>
            <img src="https://media.istockphoto.com/vectors/emoticon-flat-design-drop-shadow-effect-vector-id1258050284?k=20&m=1258050284&s=170667a&w=0&h=5LCQUJa6Q6HvFFryDGibgOJjUqxubYcWGD_ZItmmpFk=" width=80 height=80 class="d-block ms-2 mt-auto mb-auto"/>
     </div>
</div>

<div class="container-fluid col-xxl-7">
    <div class="account-info bg-light">
        <div class="d-flex mt-3 flex-wrap">
            <p>Email: @Model.Email</p>        
        </div>
        <div class="d-flex mt-3 flex-wrap">
            <p style="width:65%" class="mt-auto mb-auto">Password: ********</p>
            <a href="#" class="blue-button" id="change-password">Change password</a>
        </div>
        <h3 class="text-success arial-bold-text text-center mt-2" style="font-size:17px;">@TempData["Message"]</h3>
        <div id="change-password-area" class="d-none">
            <form method="post" asp-action="ChangePassword" asp-controller="Account" class="mb-5 mt-4">
                <input asp-for="Email" hidden/>
                <input asp-for="Name" hidden/>

                <input asp-for="ConfirmationOldPassword" class="change-pswd-input" type="password" placeholder="Old password"/>
                <input asp-for="NewPassword" class="change-pswd-input" type="password" placeholder="New password"/>
                <span asp-validation-for="NewPassword" class="text-danger fw-bold mt-2"></span>
                <input asp-for="ConfirmNewPassword" class="change-pswd-input" type="password" placeholder="Confirm new password"/>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger fw-bold mt-2"></span>
                <div class="forgot-pass"><a asp-controller="Account" asp-action="ForgotPassword">I forgot password</a></div>
                <input type="submit" class="blue-button d-block ms-auto me-auto mt-3" style="border:none;" value="Change"/>
            </form>
        </div>
         <div asp-validation-summary="ModelOnly" class="text-danger fw-bold mt-2"></div>

        <div class="d-flex mt-3 flex-wrap">
            <p class="flex-media mt-auto mb-auto">Total followers engaged via Lead<span style="color: #3362DB">Sub</span>: @Model.TotalFollowers</p>
            <a href="#" class="blue-button">My SubPages</a>
        </div>
         <div class="d-flex mt-3 flex-wrap">
            <p class="flex-media mt-auto mb-auto">Billing: $0</p>
            <a href="#" class="blue-button">Check my billing</a>
        </div>
    </div>
</div>


<h3 class="arial-bold-text text-center mt-5">Contact Us</h3>

<div class="container-fluid col-xxl-7">

<h5 class="arial-bold-text text-left mt-5 ms-5">Your message</h5>
<textarea class="contact-us-textarea">

</textarea>
<input href="#" class="blue-button d-block me-auto ms-auto mt-4" style="max-width: 120px;min-width:120px; height: 50px;border:none" type="submit" value="Send"/>
</div>

   <div class="footer-line">
 </div>
 <script src="~/js/change_password.js" type="text/javascript"></script>