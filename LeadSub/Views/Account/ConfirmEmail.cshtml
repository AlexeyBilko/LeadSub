@model LeadSub.Models.ViewModels.ConfirmEmailViewModel

<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/mainpage.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>

<div class="container-fluid col-xl-5">
   
    <div class="background">
        <div class="shape"></div>
    </div>
    <form method="post" action="~/Account/ConfirmEmail" class="mt-5">
        <h3>Please Enter Code</h3>

        <label asp-validation-for="Code">check your email</label>
        <input style="
            margin-top: 20px !important; 
            font-size: 36px;
            text-align: center;" type="text" asp-for="Code" placeholder="" />
        <input style="visibility: hidden" asp-for="UserId"/>

        <input style="margin-top: 35px !important" class="button-login" type="submit" value="Submit" />

        <a style="margin-top: 10px !important" class="link" href="~/Account/Register">Set Another Email</a>
    </form>
    <div class="text-danger mt-3" asp-validation-summary="ModelOnly"></div>
</div>
